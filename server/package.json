{
    "name": "express-tdd",
    "version": "1.0.0",
    "description": "express with tdd",
    "main": "app.js",
    "scripts": {
        "start": "node index",
        "dev": "nodemon index",
        "test": "jest --watchAll",
        "lint": "eslint ."
    },
    "author": "Amílcar Sánchez",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "socket.io": "^4.3.2"
    },
    "devDependencies": {
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^27.2.5",
        "nodemon": "^2.0.13",
        "prettier": "^2.4.1"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 6
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "prettier"
        ],
        "env": {
            "node": true,
            "es6": true,
            "jest": true
        },
        "rules": {
            "eqeqeq": "warn",
            "prettier/prettier": "warn",
            "semi": "warn"
        }
    },
    "prettier": {
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "semi": true
    }
}
